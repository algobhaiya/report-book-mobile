<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:algoBhaiya.ReportBook.Presentation.ViewModels"
             x:Class="algoBhaiya.ReportBook.Presentation.Views.MonthlyTargetPage"
             Title="Set Monthly Targets">

    <StackLayout Padding="20">
        
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="0,5">

            <!-- Search Row -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                <Label Text="Search"
                       FontAttributes="Italic"
                       FontSize="15"
                       VerticalOptions="Center" />

                <!-- (Optional: Replace with SearchBar or Entry if you want text input in future) -->
                <!-- <SearchBar Placeholder="Enter keyword..." /> -->
            </HorizontalStackLayout>

            <!-- Filter Buttons Row -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="🗓️ By Month"
                        FontAttributes="Bold"
                        Clicked="OnMonthCalendarClicked"
                        BackgroundColor="#f0f0f0"
                        TextColor="Black"
                        CornerRadius="20"
                        Padding="10,5"
                        FontSize="14" />
            </HorizontalStackLayout>

            <Frame CornerRadius="12"
                   BackgroundColor="#E0F2F1"
                   BorderColor="#4CAF50"
                   Padding="15"
                   HasShadow="False"
                   Margin="0,10,0,10">  
                <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
                    <Label Text="Month:" 
                           FontAttributes="Italic"
                           FontSize="14"
                           VerticalOptions="Center"
                           TextColor="#2E7D32" />
                    <Label Text="{Binding CurrentMonthLabel}" 
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#1B5E20"                          
                           Padding="8,4" />
                </HorizontalStackLayout>
            </Frame>

        </VerticalStackLayout>

        <CollectionView ItemsSource="{Binding Fields}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <Label Text="{Binding FieldName}" WidthRequest="120"/>
                        <Entry Text="{Binding TargetValue}" WidthRequest="100" Keyboard="Numeric"/>
                        <Label Text="{Binding UnitName}" FontAttributes="Italic" TextColor="Gray" Margin="5,0,0,0"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Submit -->
        <Button Text="Save Targets"
                Command="{Binding SubmitCommand}"
                Margin="0,20,0,0"
                IsEnabled="{Binding CanSubmit}"
                BackgroundColor="#4CAF50"
                TextColor="White" />

        <Label Text="No modification for previous/future month."
               TextColor="Red"
               FontAttributes="Italic"
               FontSize="12"
               IsVisible="{Binding IsReadOnly}" />  
    </StackLayout>
</ContentPage>
