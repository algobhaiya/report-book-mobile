<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="algoBhaiya.ReportBook.Presentation.Views.YearMonthPickerPopup"
             Title="YearMonthPickerPopup">
    <Frame CornerRadius="20" Padding="20" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20">

            <Label Text="Select Year and Month" FontSize="20" HorizontalOptions="Center" />

            <Picker x:Name="YearPicker" Title="Year"/>
            <Picker x:Name="MonthPicker" Title="Month"/>

            <Button Text="OK" Clicked="OnOkClicked"/>
            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="LightGray"/>

        </VerticalStackLayout>
    </Frame>
</ContentPage>
