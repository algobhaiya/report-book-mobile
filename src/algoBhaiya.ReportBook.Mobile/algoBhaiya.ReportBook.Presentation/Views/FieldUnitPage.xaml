<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:algoBhaiya.ReportBook.Presentation.Views"
             x:Class="algoBhaiya.ReportBook.Presentation.Views.FieldUnitPage"
             Title="Field Units">

    <Grid>
        <!-- Add Button at Top Right -->
        <Button Text="âž• Add"
                x:Name="AddUnitButton"
                Clicked="OnAddClicked"
                CornerRadius="20"
                BackgroundColor="#1976D2"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="14"
                Padding="10,5"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="10" />

        <!-- Scrollable Content -->
        <CollectionView ItemsSource="{Binding Units}"
                        SelectionMode="None"
                        Margin="10,60,10,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#E0E0E0"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">
                        <!-- Inside your existing <Frame> in DataTemplate -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <!-- Added for Delete button -->
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout>
                                <Label Text="{Binding UnitName}"
                                       FontAttributes="Bold"
                                       FontSize="16" />
                                <Label Text="{Binding ValueType}"
                                       FontSize="13"
                                       TextColor="Gray" />      
                            </VerticalStackLayout>

                            <!-- âœï¸ Edit Button -->
                            <Button Text="âœï¸"
                                    FontSize="14"
                                    Padding="6"
                                    CornerRadius="6"
                                    BackgroundColor="#eeeeee"
                                    Grid.Column="1"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    Margin="5,0,0,0">   
                                <Button.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:FieldUnitPage}}, Path=OpenDetailsCommand}" 
                                        CommandParameter="{Binding .}" />
                                </Button.GestureRecognizers>
                            </Button>

                            <!-- ðŸ—‘ï¸ Delete Button -->
                            <Button Text="ðŸ—‘ï¸"
                                    FontSize="14"
                                    Padding="6"
                                    CornerRadius="6"
                                    BackgroundColor="#FFCDD2"
                                    TextColor="DarkRed"
                                    Grid.Column="2"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End"
                                    Margin="5,0,0,0">
                                <Button.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:FieldUnitPage}}, Path=DeleteCommand}" 
                                        CommandParameter="{Binding .}" />
                                </Button.GestureRecognizers>
                            </Button>
                        </Grid>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No units found." 
                           TextColor="Gray" 
                           FontAttributes="Italic" 
                           FontSize="15"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
