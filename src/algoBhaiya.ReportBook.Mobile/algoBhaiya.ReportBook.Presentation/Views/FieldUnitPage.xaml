<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:algoBhaiya.ReportBook.Presentation.Views"
             x:Class="algoBhaiya.ReportBook.Presentation.Views.FieldUnitPage"
             Title="Field Units">

    <Grid>
        <!-- Add Button at Top Right -->
        <Button Text="➕ Add"
                x:Name="AddUnitButton"
                Clicked="OnAddClicked"
                CornerRadius="20"
                BackgroundColor="#1976D2"
                TextColor="White"
                FontSize="14"
                Padding="10,5"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="10" />

        <!-- Scrollable Content -->
        <CollectionView ItemsSource="{Binding Units}"
                        SelectionMode="None"
                        Margin="10,60,10,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#E0E0E0"
                           BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           Margin="0,5"
                           HasShadow="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout>
                                <Label Text="{Binding UnitName}"
                                       FontAttributes="Bold"
                                       FontSize="16" />
                                <Label Text="{Binding ValueType}"
                                       FontSize="13"
                                       TextColor="Gray" />
                            </VerticalStackLayout>

                            <Label Text="✏️"
                                   FontSize="14"
                                   Padding="10"
                                   BackgroundColor="#eeeeee"
                                   Grid.Column="1"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End"
                                   Margin="10,0,0,0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:FieldUnitPage}}, Path=OpenDetailsCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
